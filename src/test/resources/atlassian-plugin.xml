<atlassian-plugin key="${project.groupId}.${project.artifactId}-tests" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <!-- from our base plugin -->
    <component-import key="pushTask" interface="com.octopus.bamboo.plugins.task.push.PushTask"/>
    <component-import key="pushTaskConfigurator" interface="com.atlassian.bamboo.task.TaskConfigurator"/>

    <component-import key="createReleaseTask"
                      interface="com.octopus.bamboo.plugins.task.createrelease.CreateReleaseTask"/>

    <!-- from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>

</atlassian-plugin>